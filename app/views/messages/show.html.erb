<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        <p>
          <h6>From:</h6>
          <h5><%= @message.from %></h5>
        </p>

        <p>
          <h6>To:</h6>
          <h5><%= @message.to %></h5>
        </p>

        <p>
          <h6>Body:</h6>
          <h5><%= @message.body %></h5>
        </p>

        <p>
          <h6>Sent:</h6>
          <h5><%= time_ago_in_words(@message.sent) %> ago</h5>
        </p>
      </div>
      <div class="card-action">
        <%= link_to 'Back', messages_path %>
      </div>
    </div>
  </div>
</div>
            
