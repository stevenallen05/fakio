<p id="notice"><%= notice %></p>

<h4>Messages</h4>

<table class="striped">
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Body</th>
      <th>Sent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.from %></td>
        <td><%= message.to %></td>
        <td><%= message.body %></td>
        <td><%= message.sent.strftime('%c') %> (<%= time_ago_in_words(message.sent) %> ago)</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @messages %>